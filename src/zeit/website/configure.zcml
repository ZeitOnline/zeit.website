<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:grok="http://namespaces.zope.org/grok"
  i18n_domain="zeit.cms">

  <grok:grok package="." />

  <adapter
    factory=".interfaces.IWebsiteContent"
    for=".interfaces.IWebsiteSection"
    provides="zeit.cms.section.interfaces.ISectionMarker"
    />

  <adapter
    factory=".interfaces.IWebsiteFolder"
    for=".interfaces.IWebsiteSection"
    provides="zeit.cms.section.interfaces.ISectionMarker"
    name="collection"
    />

  <adapter
    factory=".interfaces.IWebsiteArticle"
    for=".interfaces.IWebsiteSection"
    provides="zeit.cms.section.interfaces.ISectionMarker"
    name="article"
    />

  <adapter
    factory=".interfaces.IWebsiteCenterPage"
    for=".interfaces.IWebsiteSection"
    provides="zeit.cms.section.interfaces.ISectionMarker"
    name="centerpage"
    />

  <class class=".article.TemplateSettings">
    <require
      interface=".interfaces.IArticleTemplateSettings"
      permission="zope.View"
      />
    <require
      set_schema=".interfaces.IArticleTemplateSettings"
      permission="zeit.EditContent"
      />
  </class>

</configure>
